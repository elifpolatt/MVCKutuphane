@using MVCKutuphane.Models
@model List<tblkategoriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Kategoriler</h2>

<table class="table table-bordered">

    <tr>
        <th>KATEGORI ID</th>
        <th>KATEGORI ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.AD</td>
            <td><a href="/Kategori/KategoriSil/@item.ID" class="btn btn-warning">Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@item.ID" class="btn btn-danger">Güncelle</a></td>
        </tr>
        //Silme ve güncelleme için id değerleri kullanılır.
    }

</table>
<a href="/Kategori/KategoriEkle/" class="btn btn-primary">Yeni Kategori Ekle</a>