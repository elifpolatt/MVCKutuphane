@using MVCKutuphane.Models
@model List<tblkitaplar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Kitap Sayfası</h2>

<br />


@*kitap arama işlemi için*@
@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
    <div>
        <b>Aranacak kitap adını girin: </b> @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </div>
}

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Kitap Yazarı</th>
        <th>Kategorisi</th>
        <th>Basım Yılı</th>
        <th>Yayınevi</th>
        <th>Sayfa</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.AD</td>
            <td>@item.tblyazarlar.AD @item.tblyazarlar.SOYAD</td>
            <td>@item.tblkategoriler.AD</td>
            <td>@item.BASIMYIL</td>
            <td>@item.YAYINEVI</td>
            <td>@item.SAYFA</td>
            <td>@item.DURUM</td>
            <td><a href="/Kitap/KitapSil/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kitap/KitapGetir/@item.ID" class="btn btn-warning">Güncelle</a></td>

        </tr>
    }

</table>
<a href="/Kitap/KitapEkle/" class="btn btn-primary">Yeni Kitap Ekle</a>

