@using MVCKutuphane.Models
@model List<tblyazarlar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Yazarlar</h2>

<table class="table table-striped">
    <tr style="background-color:lightblue">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>YAZARIN KİTAPLARI</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.AD</td>
            <td>@item.SOYAD</td>
            
            @* Alert ile yazar silme işlemi:
               actionlink("buton text","actionresult ismi",neye göre silinecek(id),
               new{@class, onclick metodu geri dönüş onaylama('alert text')})
                *@
            <td>
                @Html.ActionLink("Sil", "YazarSil", new { id = item.ID },
           new
                    {
                        @class = "btn btn-danger",
           onclick = "return confirm('Silmek istiyor musunuz?')"
                    })
            </td>
            <td><a href="/Yazar/YazarGetir/@item.ID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Yazar/YazarKitaplar/@item.ID" class="btn btn-info">Yazarın Detayları</a></td>

        </tr>

    }
</table>
<a class="btn btn-primary" href="/Yazar/YazarEkle/">Yeni Yazar Ekle</a>