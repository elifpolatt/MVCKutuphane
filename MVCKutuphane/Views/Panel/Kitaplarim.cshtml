@using MVCKutuphane.Models
    @model List<tblhareketler>
    @{
        ViewBag.Title = "Kitaplarim";
        Layout = "~/Views/Shared/_LayoutPanel.cshtml";
    }


<h2>Kitap Listesi</h2>
    <!DOCTYPE html>

    <html>

    <body class="hold-transition sidebar-mini">

        <section class="content">

            <div class="container-fluid">

                <div class="row">





                    <div class="col-md-12">

                        <div class="card">

                            <div class="card-header p-2">



                            </div> 

                            <div class="card-body">



                                <div class="tab-pane" id="timeline">

                                     The timeline

                                    <div class="timeline timeline-inverse">

                                         timeline time label

                                       @foreach (var item in Model)

                                        {

                                            <div class="time-label">

                                                <a class="btn btn-success">

                                                    <span class="bg-success">

                                                        @(((DateTime)item.ALISTARIH).ToString("dd-MMM-yyyy"))

                                                    </span>

                                                </a>

                                                -----

                                                <a class="btn btn-warning">

                                                    <span class="bg-warning">

                                                        @(((DateTime)item.UYEGETIRTARIH).ToString("dd-MMM-yyyy"))

                                                    </span>

                                                </a>

                                            </div>



                                            <div>

                                                <i class="fas fa-comment bg-primary"></i>

                                                <div class="timeline-item">

                                                    <div class="timeline-body">

                                                        <b> Kitap Adı:</b>  @item.tblkitaplar.AD  <b>Yazarı:</b>  @item.tblkitaplar.tblyazarlar.AD @item.tblkitaplar.tblyazarlar.SOYAD
                                                    </div>

                                                    <div class="timeline-footer">

                                                            <a href="#" class="btn btn-primary btn-sm">Düzenle</a>

                                                            <a href="#" class="btn btn-danger btn-sm">Sil</a>

                                                        </div>

                                                </div>

                                            </div>

                                        }

                                    </div>


                                </div>

                            </div>

                        </div>
                    </div>



                </div>



            </div>

        </section>

    </body>

    </html>